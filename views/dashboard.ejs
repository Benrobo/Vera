<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>HEALTH TOOLS</title>
    <link rel="stylesheet" href="./statics/css/bootstrap.css">
    <link rel="stylesheet" href="./statics/css/style.css">
</head>
<body>
    
    <!-- navbar -->
    <div class="main-body-container">
        <nav class="sidenavbar">
            <div class="sidebar">
                <ul class="list-items">
                    <li class="" data-tab-cont="bmi">
                        <span class="icon">
                            <ion-icon name="calculator"></ion-icon>
                        </span>
                        <div class="tool-tip">
                            <small class="tool-tip-cont">BMI Calculator</small>
                        </div>
                    </li>
                    <li class="" data-tab-cont="coro-tracker">
                        <span class="icon">
                            <ion-icon name="medical"></ion-icon>
                        </span> 
                        <div class="tool-tip">
                            <small class="tool-tip-cont">Coronavirus Tracker</small>
                        </div>
                    </li>
                    <li data-tab-cont="disease-dict">
                        <span class="icon">
                            <ion-icon name="book"></ion-icon>
                        </span> 
                        <div class="tool-tip">
                            <small class="tool-tip-cont">Disease Dictionary</small>
                        </div>
                    </li>
                    <li data-tab-cont="food-recipe">
                        <span class="icon">
                            <ion-icon name="pizza"></ion-icon>
                        </span>
                        <div class="tool-tip">
                            <small class="tool-tip-cont">Food Recipes</small>
                        </div>
                    </li>
                    <li data-tab-cont="health-news">
                        <span class="icon">
                            <ion-icon name="newspaper"></ion-icon>
                        </span>
                        <div class="tool-tip">
                            <small class="tool-tip-cont">Health News</small>
                        </div>
                    </li>
                    <li class="" data-tab-cont="meditation">
                        <span class="icon">
                            <ion-icon name="musical-notes"></ion-icon>
                        </span>
                        <div class="tool-tip">
                            <small class="tool-tip-cont">Meditation</small>
                        </div>
                    </li>
                    <li class="active"  data-tab-cont="heart-rate">
                        <span class="icon">
                            <ion-icon name="heart"></ion-icon>
                        </span>
                        <div class="tool-tip">
                            <small class="tool-tip-cont">Heart Rate Test</small>
                        </div>
                    </li>
                </ul>
            </div>
            <!-- responsive navbar -->
            <div class="responsive-nav">
                <!-- burger -->
                <div class="burger">
                    <ion-icon name="menu-outline" class="burger-menu-icon"></ion-icon>
                </div>
                <!-- nav items -->
                <div class="main-nav-items">
                    <ul class="list-items responsive-menu" data-responsive-menu>
                        <li>
                            <ion-icon name="calculator" class="" data-tab-cont="bmi"></ion-icon>
                        </li>
                        <li>
                            <ion-icon name="medical"data-tab-cont="coro-tracker"></ion-icon>
                        </li>
                        <li>
                            <ion-icon name="book"  data-tab-cont="disease-dict"></ion-icon>
                        </li>
                        <li>
                            <ion-icon name="pizza" data-tab-cont="food-recipe"></ion-icon>
                        </li>
                        <li>
                            <ion-icon name="newspaper"  data-tab-cont="health-news"></ion-icon>
                        </li>
                        <li>
                            <ion-icon name="musical-notes"  data-tab-cont="meditation"></ion-icon>
                        </li>
                        <li>
                            <ion-icon name="heart" class="active"  data-tab-cont="heart-rate"></ion-icon>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    
        <section class="section">
            <div class="main-cont">
                <div class="welcome-container">
                    <div class="user-card">
                        <ion-icon name="person-circle"></ion-icon>
                        <span class="name ml-1">
                            <% if(userinfo){%> 
                                <%= userinfo.username %> 
                            <% } %> 
                        </span>
                    </div>
                    <div class="user-action">
                        <a href="/logout" class="btn logout-btn">
                            Logout
                        </a>
                    </div>
                </div>
                <hr>
                <div class="boxes-cont">
                    <!-- bmi calculator -->
                    <div class="box bmi-calc" data-tab-box="bmi">
                        <div class="head">
                            <h1>BMI Calculator</h1>
                            <p>Gender</p>
                            <div class="select">
                                <button  data-gender="male" class="male" value="male">
                                    <ion-icon 
                                    name="man"
                                    class="male" value="male"></ion-icon>
                                </button>
                                <button name="woman" class="female" data-gender="female" value="female">
                                    <ion-icon 
                                    name="woman"
                                    class="female" value="female"></ion-icon>
                                </button>
                            </div>
                        </div>
                        <div class="measurement-screen">
                            <div class="head">
                                <h2>HEIGHT (FT)</h2>
                                <h2>WEIGHT (lb)</h2>
                            </div>
                            <div class="inputs">
                                <input type="number" data-bmi-height="height" class="bmi-inputs" name="height" placeholder="60">
                                <input type="number" data-bmi-weight="weight" class="bmi-inputs" name="weight" placeholder="45">
                            </div>
                            <div class="action">
                                <button class="btn submit-btn" data-calc-button>
                                    Calculate BMI
                                </button>
                            </div>
                        </div>
                        <div class="result-main-screen">
                            <div class="result-screen" data-bmi-result>
                            </div>
                            <div class="recommendations">
                                <p>Here are other nutrition food recommenation which can help you stabilize your fitness.</p>
                                <br>
                                <div class="food-boxes-cont" data-food-container>
                                </div>
                                <br>
                                <br>
                            </div>
                        </div>
                        <br>
                        <br>
                    </div>
                    <!-- coro tracker -->
                    <div class="box coro-tracker" data-tab-box="coro-tracker">
                        <div class="coro-container">
                            <div class="head">
                                <p>Persolan Covid-19 Chatbot</p>
                                <div class="action-select">
                                    <button class="btns chatbot-btn" data-chat-tab>
                                        Chat Bot
                                    </button>
                                    <button class="btns voice-recognition-btn" data-chat-tab>
                                        Voice Recognition
                                    </button>
                                </div>
                            </div>
                            <div class="chat-container">
                                <div class="chat-head">
                                    <div class="img-cont">
                                        <img src="./statics/img/section/bot.png" alt="" class="img-fluid">
                                    </div>
                                    <span class="botname">Personal Bot</span>
                                </div>
                                <div class="chat-body">
                                    <div class="bot-loading">
                                        <span class="spinner-grow spinner-grow-sm p-0"></span>
                                        <span class="spinner-grow spinner-grow-sm p-0"></span>
                                        <span class="spinner-grow spinner-grow-sm p-0"></span>
                                    </div>
                                </div>
                                <div class="chat-action">
                                    <input type="text" class="chat-msg-input" placeholder="Countries name here">
                                    <button class="submit-btn btn chat-submit">
                                        Send <ion-icon name="arrow-forward-outline"></ion-icon>
                                    </button>
                                </div>
                            </div>
                            <!-- voice recognition -->
                            <div class="voice-reg-cont">
                                <p>Pronounce a Country Name: eg <small>United State</small></p>
                                <div class="main">
                                    <button class="mic voice-start">
                                        <ion-icon name="mic-outline"></ion-icon>
                                    </button>
                                    <button class="mic voice-stop">
                                        <ion-icon name="mic-off-outline"></ion-icon>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Disease  Dict -->
                    <div class="box disease-dict" data-tab-box="disease-dict">
                        <div class="dict-cont">
                            <div class="head">
                                <h1>Disease Dictionary</h1>
                                <p>Lookup word and never forget it.</p>
                            </div>
                            <div class="search-container">
                                <input type="text" placeholder="Start searching" autofocus class="searchbox dict-input">
                            </div>
                            <br>
                            <div class="result-container dict-result-cont">
                                <div class="result-card">
                                    <div class="head">
                                        <span class="letter">A</span>
                                    </div>
                                    <div class="body mt-5">
                                        <h4>coronavirus</h4>
                                        <span>kəˈrəʊnəˌvʌɪrəs</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- dictionary modal -->
                        <div class="dict-modal-cont">
                            <div class="dict-modal-box">
                                <div class="head">
                                    <h1>A</h1>
                                    <h3 class="px-3">Amaphombia</h3>
                                    <div class="main">
                                        <span>[ˈrəʊbɒt]</span>
                                        <span class="audio" data-audio="">
                                            <ion-icon name="mic" data-dict-mic></ion-icon>
                                        </span>
                                    </div>
                                </div>
                                <div class="body mt-4">
                                    <h5>Origin</h5>
                                    <small class="ml-5 px-3">Lorem ipsum dolor sit amet.</small>
                                    <br>
                                    <h5>Noun</h5>
                                    <p>Definition</p>
                                    <small class="ml-5 px-3">Lorem ipsum dolor sit amet.</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box food-recipe" data-tab-box="food-recipe">
                        <h1>Meditation APP</h1>
                    </div>
                    <!-- health news -->
                    <div class="box health-news" data-tab-box="health-news">
                        <div class="head">
                            <h1>Top Health & Fitness News.</h1>
                            <p>Get all news realted to health.</p>
                        </div>
                        <div class="main-body">
                            <!-- health -->
                            <div class="health-section">
                                <hr>
                                <h2> <small class="deco">*</small> Health</h2>
                                <br>
                                <div class="boxes h-container"></div>
                                <br>
                                <hr>
                                <h2> <small class="deco">*</small> Fitness</h2>
                                <div class="boxes f-container"></div>
                            </div>
                        </div>
                    </div>
                    <!-- Meditation App -->
                    <div class="box meditation" data-tab-box="meditation">
                       <div class="meditation-container">
                           <div class="head">
                                <h1>Meditation</h1>
                                <p>
                                    Peace begins within and it expands to the outside
                                </p>
                           </div>
                           <div class="img-cont">
                               <div class="sunvibes">
                                <div class="pointer-cont medi-pointer">
                                </div>
                               </div>
                               <img src="./statics/img/section/medi.svg" class="img-fluid medi-img" alt="">
                           </div>
                           <div class="medi-instruction">
                               <div class="medi-struction"></div>
                               <br>
                                <div class="start-cont" mt-4>
                                    <button class="start-btn med-start-btn medbtn">
                                       Start Meditating
                                    </button>
                                    <button class="stop-btn med-stop-btn medbtn">
                                        Stop Meditating
                                    </button>
                               </div>
                           </div>
                       </div>
                    </div>   
                    <!-- heart rate -->
                    <div class="box heart-rate" data-tab-box="heart-rate">
                        <div class="head">
                            <h2>Target Heart Rate</h2>
                            <p>Get your target heart rate using this calculator</p>
                            <span class="history-btn">
                                <ion-icon name="bookmark" data-history-btn></ion-icon>
                            </span>
                        </div>
                        <div class="show-screen">
                            <br>
                            <div class="inputs-field">
                                <p>Your AGE</p>
                                <input type="number" placeholder="25" class="age" data-heart-age>
                                <br>
                                <button class="heartrate-btn">Calculate Target Heart Rate</button>
                            </div>
                            <br>
                            <div class="result-container" data-heart-result>
                                <span class="close-cont">
                                    <ion-icon name="close-circle" data-close-heart-container></ion-icon>
                                    <ion-icon name="save" data-save-heart-value></ion-icon>
                                </span>
                                <div class="img-cont">
                                    <ion-icon name="heart" class="heart"></ion-icon>
                                    <div class="beat-cont">
                                        <img src="./statics/img/section/heart.png" alt="" class="beat-line">
                                        <div class="beat-ovl"></div>
                                    </div>
                                </div>
                                <h1 class="target-value anime" data-heart-result-value></h1>
                            </div>
                        </div>
                        <div class="history-cont" data-heart-rate-history>
                            <div class="cont">
                                <table class="table table-striped">
                                    <thead>
                                        <th>Created</th>
                                        <th>MAX Heart Rate</th>
                                        <th>HRR</th>
                                    </thead>
                                    <tbody data-heart-history></tbody>
                                </table>
                                <br>
                                <div class="action">
                                    <button class="btn btn-danger" data-clear-history>Clear All</button>
                                    <button class="btn close" data-close-history>Close</button>
                                </div>
                            </div>
                        </div>
                    </div>  
                </div>
            </div>
        </section>
    </div>
    <!-- covid 19 modal -->

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="./statics/js/app.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js" integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- socket io -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.3/socket.io.js" integrity="sha512-PU5S6BA03fRv1Q5fpwXjg5nlRrgdoguZ74urFInkbABMCENyx5oP3hrDzYMMPh3qdLdknIvrGj3yqZ4JuU7Nag==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

</body>
</html>

